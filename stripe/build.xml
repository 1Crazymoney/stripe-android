<?xml version="1.0" encoding="utf-8" ?>
<project name="stripe-android" default="jar" basedir=".">

    <property environment="env"/>

    <path id="android.classpath">
      <fileset dir="${env.ANDROID_SDK_ROOT}">
        <include name="platforms/android-3/android.jar"/>
      </fileset>
    </path>

    <path id="test.classpath">
      <fileset dir="lib" includes="**/*.jar"/>
      <path refid="android.classpath"/>
    </path>

    <target name="clean">
        <delete dir="bin"/>
    </target>

    <target name="compile" description="Compile source" depends="clean">
        <delete dir="bin" quiet="true"/>
        <mkdir dir="bin" />
        <javac srcdir="src/main/java" includes="**" destdir="bin" includeantruntime="false">
          <classpath refid="android.classpath"/> 
        </javac>
    </target>

    <target name="jar" description="Package into JAR" depends="compile">
        <jar destfile="../stripe-android.jar" basedir="bin" compress="true" />
    </target>

    <target name="compiletests" description="Compile source" depends="compile">
        <javac srcdir="src/test/java" includes="**" destdir="bin" includeantruntime="false">
          <classpath refid="test.classpath"/>
        </javac>
    </target>

    <target name="test" description="Run unit tests" depends="compiletests">
      <junit >
        <classpath>
            <path refid="test.classpath"/>
            <pathelement location="bin"/>
        </classpath>
        <formatter usefile="false" type="plain"/>
        <test name="com.stripe.AllTests"/>
      </junit>
    </target>

</project>
